<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_carrinho_compras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundActivity"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:title="@string/toolbar_carrinho_compras">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerciew_categoria_cardapio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_carrinho_compras"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@color/colorPrimaryLigth"
        tools:listitem="@layout/carrinho_compras"  />

    <Button
        android:id="@+id/carrinho_compras_btn_ConfirmarCodigo"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/recyclerciew_categoria_cardapio"
        android:background="@drawable/botao_comum"/>
</RelativeLayout>

