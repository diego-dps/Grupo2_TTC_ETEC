<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_garcom_chamada">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/blackDarktheme">

        <TextView
            android:id="@+id/txt_ajuda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Poderia me ajudar?"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_chamadaMesa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mesa 12 chamando!!!"
            android:textColor="@color/dangerColor"
            android:layout_alignStart="@+id/txt_ajuda"
            android:layout_below="@+id/txt_ajuda"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/btn_removerMesa"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/botao_remover"
            android:text="Remover"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>

